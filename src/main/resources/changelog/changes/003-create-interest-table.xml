<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation=" http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">
    <changeSet id="create-interest-table" author="sasi_sk ">

        <createTable tableName="interest">

            <column name="interest_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="account_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="interest_amount" type="DOUBLE">
                <constraints nullable="false"/>
            </column>

            <column name="interest_applied_date" type="DATE">
                <constraints nullable="false"/>
            </column>


        </createTable>

        <addForeignKeyConstraint
                baseTableName="interest"
                baseColumnNames="account_id"
                constraintName="Fk_account_id"
                referencedTableName="account"
                referencedColumnNames="account_id"/>

    </changeSet>
</databaseChangeLog>