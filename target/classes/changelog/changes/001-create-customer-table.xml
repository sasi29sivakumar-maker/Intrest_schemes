<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation=" http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">
    <changeSet id="create-customer-table" author="sasi_sk ">

        <createTable tableName="customer">

            <column name="customer_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="customer_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="gender" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>

            <column name="phone_no" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>

            <column name="email" type="VARCHAR(100)">
            </column>

            <column name="address" type="VARCHAR(50)">
            </column>

            <column name="aadhar_no" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="customer_status" type="VARCHAR(30)" defaultValue="FIXED">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>